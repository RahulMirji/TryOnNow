{
  "manifest_version": 3,
  "name": "TryOnNow - Virtual Try On",
  "version": "1.0.0",
  "description": "Virtual try-on for Amazon India & Flipkart clothing",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://www.amazon.in/*",
    "https://www.flipkart.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.in/*",
        "https://www.flipkart.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
